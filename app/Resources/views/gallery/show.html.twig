{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gallery</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ gallery.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ gallery.body }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ gallery.author }}</td>
            </tr>
            <tr>
                <th>Postdate</th>
                <td>{% if gallery.postDate %}{{ gallery.postDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gallery_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gallery_edit', { 'id': gallery.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
